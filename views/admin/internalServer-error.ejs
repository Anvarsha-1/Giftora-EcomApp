<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>500 - Internal Server Error</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }

    .container {
      background: white;
      border-radius: 12px;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
      max-width: 700px;
      width: 100%;
      overflow: hidden;
    }

    .header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      padding: 40px 30px;
      color: white;
      text-align: center;
    }

    .error-code {
      font-size: 64px;
      font-weight: 700;
      margin-bottom: 10px;
      text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
    }

    .error-title {
      font-size: 24px;
      font-weight: 600;
      margin-bottom: 5px;
    }

    .error-subtitle {
      font-size: 14px;
      opacity: 0.9;
    }

    .content {
      padding: 40px 30px;
    }

    .details-section {
      margin-bottom: 30px;
    }

    .section-title {
      font-size: 14px;
      font-weight: 600;
      color: #333;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: 15px;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .icon {
      width: 20px;
      height: 20px;
      background: #667eea;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 12px;
    }

    .error-details {
      background: #f5f5f5;
      border-left: 4px solid #667eea;
      padding: 15px;
      border-radius: 4px;
      font-family: 'Monaco', 'Courier New', monospace;
      font-size: 13px;
      color: #333;
      max-height: 200px;
      overflow-y: auto;
      line-height: 1.5;
    }

    .error-details::-webkit-scrollbar {
      width: 6px;
    }

    .error-details::-webkit-scrollbar-track {
      background: #eee;
    }

    .error-details::-webkit-scrollbar-thumb {
      background: #999;
      border-radius: 3px;
    }

    .timestamp {
      font-size: 13px;
      color: #666;
      margin-bottom: 20px;
    }

    .actions {
      display: flex;
      gap: 12px;
      margin-top: 30px;
      flex-wrap: wrap;
    }

    .btn {
      padding: 10px 20px;
      border: none;
      border-radius: 6px;
      font-size: 14px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-block;
    }

    .btn-primary {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
    }

    .btn-secondary {
      background: #f0f0f0;
      color: #333;
      border: 1px solid #ddd;
    }

    .btn-secondary:hover {
      background: #e8e8e8;
      border-color: #999;
    }

    .status-badge {
      display: inline-block;
      background: #ff6b6b;
      color: white;
      padding: 4px 12px;
      border-radius: 20px;
      font-size: 12px;
      font-weight: 600;
      margin-bottom: 15px;
    }

    .footer {
      background: #fafafa;
      padding: 20px 30px;
      border-top: 1px solid #eee;
      font-size: 12px;
      color: #999;
      text-align: center;
    }

    .loading {
      display: inline-block;
      width: 8px;
      height: 8px;
      background: #667eea;
      border-radius: 50%;
      animation: pulse 1.5s infinite;
    }

    @keyframes pulse {

      0%,
      100% {
        opacity: 1;
      }

      50% {
        opacity: 0.5;
      }
    }

    @media (max-width: 600px) {
      .header {
        padding: 30px 20px;
      }

      .error-code {
        font-size: 48px;
      }

      .error-title {
        font-size: 20px;
      }

      .content {
        padding: 30px 20px;
      }

      .actions {
        flex-direction: column;
      }

      .btn {
        width: 100%;
        text-align: center;
      }
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="header">
      <div class="error-code">500</div>
      <div class="error-title">Internal Server Error</div>
      <div class="error-subtitle">Something went wrong on our end</div>
    </div>

    <div class="content">
      <div class="status-badge">‚óè ERROR STATUS</div>

      <div class="timestamp">
        <strong>Time:</strong> <span id="timestamp"></span>
      </div>

      <div class="details-section">
        <div class="section-title">
          <div class="icon">‚ö†</div>
          Error Details
        </div>
        <div class="error-details" id="errorDetails">
          Loading error details<span class="loading"></span>
        </div>
      </div>

      <div class="details-section">
        <div class="section-title">
          <div class="icon">i</div>
          What happened?
        </div>
        <p style="font-size: 14px; color: #555; line-height: 1.6;">
          The server encountered an unexpected condition that prevented it from fulfilling the request. Our team has
          been notified and is investigating the issue. Please try again later or contact support if the problem
          persists.
        </p>
      </div>

      <div class="actions">
        <button class="btn btn-primary" onclick="location.href='/'">‚Üê Back to Dashboard</button>
        <button class="btn btn-secondary" onclick="location.reload()">üîÑ Retry</button>
        <button class="btn btn-secondary" onclick="copyErrorDetails()">üìã Copy Error</button>
      </div>
    </div>

    <div class="footer">
      Request ID: <code id="requestId"></code> | Support: admin@example.com
    </div>
  </div>

  <script>
    // Generate timestamp
    function formatTimestamp() {
      const now = new Date();
      return now.toLocaleString('en-US', {
        year: 'numeric',
        month: '2-digit',
        day: '2-digit',
        hour: '2-digit',
        minute: '2-digit',
        second: '2-digit',
        hour12: true
      });
    }

    // Generate request ID
    function generateRequestId() {
      return 'REQ-' + Date.now() + '-' + Math.random().toString(36).substr(2, 9).toUpperCase();
    }

    // Generate error details
    function generateErrorDetails() {
      const details = [
        'Error: Internal Server Error',
        'Status Code: 500',
        'Endpoint: /api/admin/data',
        'Method: POST',
        'Database Connection: Failed',
        'Service Status: Degraded',
        'Retry Attempt: 3/3',
        'Stack Trace: app.js:245 ‚Üí handler.js:112 ‚Üí db.js:89'
      ];
      return details.join('\n');
    }

    // Copy error details to clipboard
    function copyErrorDetails() {
      const errorText = document.getElementById('errorDetails').textContent;
      navigator.clipboard.writeText(errorText).then(() => {
        const btn = event.target;
        const originalText = btn.textContent;
        btn.textContent = '‚úì Copied!';
        setTimeout(() => {
          btn.textContent = originalText;
        }, 2000);
      });
    }

    // Initialize
    document.getElementById('timestamp').textContent = formatTimestamp();
    document.getElementById('requestId').textContent = generateRequestId();

    // Simulate loading error details
    setTimeout(() => {
      document.getElementById('errorDetails').textContent = generateErrorDetails();
    }, 800);
  </script>
</body>

</html>