<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#2a2e4c">
    <title>OTP Verification - Your Account</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #2a2e4c;
            font-family: 'Poppins', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            color: #fff;
            line-height: 1.6;
        }

        .container {
            background: #fff;
            padding: 2.5rem;
            border-radius: 15px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 450px;
            text-align: center;
            animation: fadeIn 0.5s ease-in;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        .container h2 {
            color: #2a2e4c;
            font-size: 1.8rem;
            margin-bottom: 1.2rem;
        }

        .container p {
            color: #666;
            margin-bottom: 1.8rem;
            font-size: 0.95rem;
        }

        .flash-message {
            padding: 12px 20px;
            border-radius: 6px;
            margin: 10px auto;
            width: 80%;
            text-align: center;
            font-weight: bold;
            animation: fadeOut 4s forwards;
        }

        .flash-message.success {
            background-color: #d4edda;
            color: #155724;
        }

        .flash-message.error {
            background-color: #f8d7da;
            color: #721c24;
        }

        @keyframes fadeOut {
            0% {
                opacity: 1;
            }

            80% {
                opacity: 1;
            }

            100% {
                opacity: 0;
                display: none;
            }
        }

        .otp-input {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-bottom: 1.5rem;
        }

        .otp-input input {
            width: 50px;
            height: 50px;
            text-align: center;
            font-size: 1.2rem;
            border: 2px solid #ddd;
            border-radius: 8px;
            outline: none;
            transition: border-color 0.3s ease;
        }

        .otp-input input:focus {
            border-color: #2a2e4c;
        }

        .btn {
            background-color: #2a2e4c;
            color: #fff;
            padding: 0.9rem;
            border: none;
            border-radius: 8px;
            width: 100%;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .btn:hover {
            background-color: #1e223a;
        }

        .link {
            color: #2a2e4c;
            text-decoration: none;
            margin-top: 1.2rem;
            display: block;
            font-size: 0.9rem;
            transition: color 0.3s ease;
        }

        .link.disabled {
            pointer-events: none;
            opacity: 0.5;
        }

        .link:hover {
            color: #1e223a;
        }

        #timer {
            color: #2a2e4c;
            font-weight: 600;
            margin-top: 1rem;
        }
    </style>
</head>

<body>
    <form action="/otp-forgot-password" method="post">
        <div class="container">
            <h2>OTP Verification</h2>
            <p>Enter the 6-digit code sent to your email.</p>
            <% if (error && error.length> 0) { %>
                <div style="
        background-color: #fef2f2;
        color: #b91c1c;
        border: 1px solid #fca5a5;
        padding: 12px 16px;
        border-radius: 8px;
        font-size: 15px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
      ">
                    <span style="font-size: 18px;"></span>
                    <span>
                        <%= error[0] %>
                    </span>
                </div>
                <% } %>

                    <div class="otp-input">
                        <input type="text" name="otp" maxlength="1">
                        <input type="text" name="otp" maxlength="1">
                        <input type="text" name="otp" maxlength="1">
                        <input type="text" name="otp" maxlength="1">
                        <input type="text" name="otp" maxlength="1">
                        <input type="text" name="otp" maxlength="1">
                    </div>

                    <button type="submit" class="btn">Verify OTP</button>
                    <a href="#" class="link" id="resendLink">Resend Code</a>
                    <div id="timer">Time remaining: 60s</div>
        </div>
    </form>

    <script>
        const inputs = document.querySelectorAll('.otp-input input');

        inputs.forEach((input, index) => {
            input.addEventListener('input', () => {
                if (input.value.length === 1 && index < inputs.length - 1) {
                    inputs[index + 1].focus();
                }
            });

            input.addEventListener('keydown', (e) => {
                if (e.key === 'Backspace' && !input.value && index > 0) {
                    inputs[index - 1].focus();
                }
            });
        });
    </script>


    <script>
        let timeLeft = 60;
        let timer;
        const timerDisplay = document.getElementById('timer');
        const resendLink = document.getElementById('resendLink');

        function startTimer() {
            timeLeft = 60;
            resendLink.classList.add('disabled');
            timer = setInterval(() => {
                timeLeft--;
                timerDisplay.textContent = `Time remaining: ${timeLeft}s`;
                if (timeLeft <= 0) {
                    clearInterval(timer);
                    timerDisplay.textContent = 'Time is up!';
                    resendLink.classList.remove('disabled');
                }
            }, 1000);
        }


        setTimeout(() => {
            const msg = document.querySelector('.flash-message');
            if (msg) msg.style.display = 'none';
        }, 4000);




        resendLink.addEventListener('click', () => {
            if (!resendLink.classList.contains('disabled')) {
                resendLink.classList.add('disabled');
                timerDisplay.textContent = 'Resending...';
                setTimeout(() => {
                    startTimer();
                }, 2000);
            }
        });

        startTimer();
    </script>
</body>

</html>