            letter-spacing: 2px;
        }

        .hero .subtitle {
            font-size: 2.5rem;
            color: #87ceeb;
            font-style: italic;
            margin-bottom: 30px;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
        }

        .discount-badge {
