            <script>
                // Category filter function
                function filterByCategory(category) {
                    const categoryCards = document.querySelectorAll('.category-card');
                    categoryCards.forEach(card => {
                        card.style.transform = 'translateY(0)';
                        card.style.boxShadow = 'var(--shadow-light)';
                    });

                    event.target.closest('.category-card').style.transform = 'translateY(-4px)';
                    event.target.closest('.category-card').style.boxShadow = 'var(--shadow-heavy)';

                    showToast(`Showing ${category} products`, 'success');
                }



                // Product card click handler
                document.querySelectorAll('.product-card').forEach(card => {
                    card.addEventListener('click', function (e) {
                        if (!e.target.closest('.wishlist-btn') && !e.target.closest('.add-to-cart') && !e.target.closest('.quick-btn')) {
                            const productName = this.querySelector('.product-name').textContent;
                            showToast(`Viewing ${productName}`, 'success');
                        }
                    });
                });

                // Image loading simulation
                document.querySelectorAll('.product-img').forEach(img => {
                    img.addEventListener('load', function () {
                        this.classList.remove('loading');
                    });

                    setTimeout(() => {
                        img.classList.remove('loading');
                    }, 2000);
                });

                // Smooth scrolling for navigation
                document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                    anchor.addEventListener('click', function (e) {
                        e.preventDefault();
                        const target = document.querySelector(this.getAttribute('href'));
                        if (target) {
                            target.scrollIntoView({
                                behavior: 'smooth'
                            });
                        }
                    });
                });

                // Mobile menu toggle
                function createMobileMenu() {
                    const header = document.querySelector('.header-content');
                    const navLinks = document.querySelector('.nav-links');

                    if (!header || !navLinks) return;

                    if (window.innerWidth <= 768) {
                        if (!document.querySelector('.mobile-menu-btn')) {
                            const menuBtn = document.createElement('button');
                            menuBtn.className = 'mobile-menu-btn';
                            menuBtn.innerHTML = '<i class="fas fa-bars"></i>';
                            menuBtn.style.cssText = `
                        display: block;
                        background: none;
                        border: none;
                        font-size: 1.5rem;
                        cursor: pointer;
                        color: var(--dark-gray);
                    `;

                            menuBtn.addEventListener('click', () => {
                                navLinks.style.display = navLinks.style.display === 'flex' ? 'none' : 'flex';
                            });

                            header.appendChild(menuBtn);
                        }
                    }
                }

                window.addEventListener('load', createMobileMenu);
                window.addEventListener('resize', createMobileMenu);

                // Show custom toast notification
                function showToast(message, type = 'success') {
                    const toastContainer = document.getElementById('toastContainer');
                    const toast = document.createElement('div');
                    toast.className = `toast ${type}`;

                    const icon = type === 'success' ? 'ri-check-line' : 'ri-error-warning-line';
                    const iconColor = type === 'success' ? 'text-green-600' : 'text-red-600';

                    toast.innerHTML = `
                <div class="flex items-center gap-3">
                    <i class="${icon} ${iconColor}"></i>
                    <span class="text-gray-900 font-medium">${message}</span>
                    <button onclick="this.parentElement.parentElement.remove()" class="ml-auto text-gray-400 hover:text-gray-600">
                        <i class="ri-close-line"></i>
                    </button>
                </div>
            `;

                    toastContainer.appendChild(toast);

                    setTimeout(() => toast.classList.add('show'), 100);

                    setTimeout(() => {
                        toast.classList.remove('show');
                        setTimeout(() => toast.remove(), 300);
                    }, 4000);
                }

                async function addToCart(button) {
                    const productId = button.getAttribute('data-id');

                    try {
                        const response = await fetch('/cart', {
                            method: "POST",
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({ productId, quantity: 1 })
                        });
                        const data = await response.json();

                        if (data.success) {
                            showToast('Product added to cart', 'success');
                            await updateCartCount();
                        } else {
                            if (data.message === "User not logged in") {
                                window.location.href = '/login';
                            } else {
                                showToast(data.message || 'Could not add product to cart', 'error');
                            }
                        }
                    } catch (err) {
                        console.error(err);
                        showToast('Something went wrong', 'error');
                    }
                }

                const Toast = Swal.mixin({
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 2000,
                    timerProgressBar: true,
                    didOpen: (toast) => {
                        toast.addEventListener('mouseenter', Swal.stopTimer);
                        toast.addEventListener('mouseleave', Swal.resumeTimer);
                    }
                });

                async function addWishlist(productId, button) {
                    try {
                        const res = await fetch(`/wishlist/add/`, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({ productId }),
                        });

                        const result = await res.json();

                        if (result.success) {
                            Toast.fire({
                                icon: 'success',
                                title: result.message || "Wishlist updated"
                            }).then(() => {

                                const icon = button.querySelector("i.fa-heart");

                                if (result.inWishlist) {
                                    icon.classList.remove("far");
                                    icon.classList.add("fas", "text-red-500");
                                    button.style.backgroundColor = 'var(--white)';
                                    button.style.color = 'var(--accent-color)';
                                } else {
                                    icon.classList.remove("fas", "text-red-500");
                                    icon.classList.add("far");
                                    button.style.backgroundColor = 'var(--white)';
                                    button.style.color = 'var(--dark-gray)';
                                }
                                updateCartCount();
                            });
                        } else {
                            if (result.message === "user not found") {
                                Swal.fire({
                                    icon: 'info',
                                    title: "Login Required",
                                    text: "Please login to continue",
                                    showCancelButton: true,
                                    confirmButtonText: "Login",
                                    cancelButtonText: "Cancel",
                                }).then((res) => {
                                    if (res.isConfirmed) {
                                        window.location.href = "/login";
                                    }
                                });
                                return;
                            }

                            Toast.fire({
                                icon: 'error',
                                title: result.message || 'Failed to update wishlist'
                            });
                        }
                    } catch (err) {
                        console.error(err);
                        Toast.fire({
                            icon: 'error',
                            title: 'Server error'
                        });
                    }
                }
            </script>
