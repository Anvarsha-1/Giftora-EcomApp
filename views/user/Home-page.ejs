            <!-- Referral Modal -->
             <% if(user && user.isFirstLogin){ %>
            <div id="referralModal" class="referral-modal-overlay">
                <div class="referral-modal-content">
                    <h2>Have a Referral Code?</h2>
                    <p>Enter a code from a friend to get a special reward!</p>
                    <form id="referralForm" onsubmit="submitReferral(event)">
                        <div id="referralError" class="referral-error-message"></div>
                        <input type="text" id="referralCodeInput" placeholder="E.G. GIFT5136" maxlength="8"
                            autocomplete="off">
                        <div class="referral-modal-buttons">
                            <button type="button" id="skipReferralBtn">Skip</button>
                            <button type="submit" id="submitReferralBtn">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
            <% } %>


            <!-- Toast Container -->
            <div id="toastContainer" class="toast-container"></div>

            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
            <script>
                window.isLoggedIn = <%- !!user %>;



                function handleWishlistClick() {
                    if (!window.isLoggedIn) {
                        Swal.fire({
                            icon: 'info',
                            title: 'Login Required',
                            text: 'Please login to add items to your wishlist',
                            showCancelButton: true,
                            confirmButtonText: 'Login',
                            cancelButtonText: 'Cancel'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.href = '/login';
                            }
                        });
                        return;
                    }


                }


                // Category filter function
                function filterByCategory(category) {
                    const categoryCards = document.querySelectorAll('.category-card');
                    categoryCards.forEach(card => {
                        card.style.transform = 'translateY(0)';
                        card.style.boxShadow = 'var(--shadow-light)';
                    });

                    event.target.closest('.category-card').style.transform = 'translateY(-4px)';
                    event.target.closest('.category-card').style.boxShadow = 'var(--shadow-heavy)';


                }

                // Image loading simulation
                document.querySelectorAll('.product-img').forEach(img => {
                    img.addEventListener('load', function () {
                        this.classList.remove('loading');
                    });

                    setTimeout(() => {
                        img.classList.remove('loading');
                    }, 2000);
                });

                // Smooth scrolling for navigation
                document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                    anchor.addEventListener('click', function (e) {
                        e.preventDefault();
                        const target = document.querySelector(this.getAttribute('href'));
                        if (target) {
                            target.scrollIntoView({
                                behavior: 'smooth'
                            });
                        }
                    });
                });

                // Show custom toast notification
                function showToast(message, type = 'success') {
                    const toastContainer = document.getElementById('toastContainer');
                    const toast = document.createElement('div');
                    toast.className = `toast ${type}`;

                    const icon = type === 'success' ? 'ri-check-line' : 'ri-error-warning-line';
                    const iconColor = type === 'success' ? 'text-green-600' : 'text-red-600';

                    toast.innerHTML = `
                <div class="flex items-center gap-3">
                    <i class="${icon} ${iconColor}"></i>
                    <span class="text-gray-900 font-medium">${message}</span>
                    <button onclick="this.parentElement.parentElement.remove()" class="ml-auto text-gray-400 hover:text-gray-600">
                        <i class="ri-close-line"></i>
                    </button>
                </div>
            `;

                    toastContainer.appendChild(toast);

                    setTimeout(() => toast.classList.add('show'), 100);

                    setTimeout(() => {
                        toast.classList.remove('show');
                        setTimeout(() => toast.remove(), 300);
                    }, 4000);
                }

                async function addToCart(button) {
                    const productId = button.getAttribute('data-id');

                    try {
                        const response = await fetch('/cart', {
                            method: "POST",
                            headers: {
                                'Content-Type': 'application/json',
                                'Accept': 'application/json'
                            },
                            body: JSON.stringify({ productId, quantity: 1 })
                        });

                        // Check if the response is JSON before trying to parse it
                        const contentType = response.headers.get("content-type");
                        if (!contentType || !contentType.includes("application/json")) {
                            // If not JSON, it's likely a redirect to the login page
                            Swal.fire({
                                icon: 'info',
                                title: "Login Required",
                                text: "Please login to add items to your cart.",
                                showCancelButton: true,
                                confirmButtonText: "Login",
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    window.location.href = '/login';
                                }
                            });
                            return;
                        }

                        const data = await response.json();

                        if (data.success) {

                            // ✅ Success toast
                            Toast.fire({
                                icon: 'success',
                                title: 'Product added to cart'
                            });
                            await updateCartCount();

                        } else {
                            if (data.message === 'Unauthorized: Please login') {
                                Swal.fire({
                                    icon: 'info',
                                    title: "Login Required",
                                    text: "Please login to continue",
                                    showCancelButton: true,
                                    confirmButtonText: "Login",
                                    cancelButtonText: "Cancel",
                                }).then((res) => {
                                    if (res.isConfirmed) {
                                        window.location.href = "/login";
                                    }
                                });
                                return;
                            }

                            Toast.fire({
                                icon: 'error',
                                title: data.message || 'Failed to add to cart'
                            });
                        }
                    } catch (err) {
                        console.error(err);
                        // ❌ Error toast
                        Toast.fire({
                            icon: 'error',
                            title: 'Something went wrong'
                        });
                    }
                }



                const Toast = Swal.mixin({
                    toast: true,
                    position: 'bottom-end',
                    showConfirmButton: false,
                    timer: 2000,
                    timerProgressBar: true,
                    didOpen: (toast) => {
                        toast.addEventListener('mouseenter', Swal.stopTimer);
                        toast.addEventListener('mouseleave', Swal.resumeTimer);
                    }
                });

                async function addWishlist(productId, button) {
                    try {
                        const res = await fetch(`/wishlist/add/`, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'Accept': 'application/json'
                            },
                            body: JSON.stringify({ productId }),
                        });

                        const result = await res.json();
                        console.log(result)

                        if (result.success) {
                            const icon = button.querySelector("i.fa-heart");

                            if (result.inWishlist) {
                                icon.classList.remove("far");
                                icon.classList.add("fas");
                                button.classList.add("active");
                            } else {
                                icon.classList.remove("fas");
                                icon.classList.add("far");
                                button.classList.remove("active");
                            }
                            updateCartCount().then(() => {
                                Toast.fire({
                                    icon: 'success',
                                    title: result.message || "Wishlist updated"
                                });
                            });
                        } else {
                            if (result.message === "user not found") {
                                Swal.fire({
                                    icon: 'info',
                                    title: "Login Required",
                                    text: "Please login to continue",
                                    showCancelButton: true,
                                    confirmButtonText: "Login",
                                    cancelButtonText: "Cancel",
                                }).then((res) => {
                                    if (res.isConfirmed) {
                                        window.location.href = "/login";
                                    }
                                });
                                return;
                            }

                            Toast.fire({
                                icon: 'error',
                                title: result.message || 'Failed to update wishlist'
                            });
                        }
                    } catch (err) {
                        console.error(err);
                        Toast.fire({
                            icon: 'error',
                            title: 'Server error'
                        });
                    }
                }

                // --- Referral Modal Logic ---
                document.addEventListener('DOMContentLoaded', () => {
                    const isFirstLogin = <%- (user && user.isFirstLogin) ? 'true' : 'false' %>;
                    const referralModal = document.getElementById('referralModal');
                    const skipButton = document.getElementById('skipReferralBtn');
                    const referralForm = document.getElementById('referralForm');
                    const referralError = document.getElementById('referralError');
                    const referralInput = document.getElementById('referralCodeInput');

                    if (isFirstLogin && referralModal) {
                        setTimeout(() => {
                            referralModal.classList.add('show');
                        }, 1500); 
                    }

                    const closeModal = () => {
                        if (referralModal) referralModal.classList.remove('show');
                    };

                    // Handle Skip
                    skipButton?.addEventListener('click', async () => {
                        try {
                            await fetch('/api/referral/skip', { method: 'POST' });
                        } catch (error) {
                            console.error('Failed to call skip API:', error);
                        } finally {
                            closeModal();
                        }
                    });

                    // Handle Submit
                    window.submitReferral = async (event) => {
                        event.preventDefault();
                        const code = referralInput.value.trim().toUpperCase();
                        referralError.textContent = ''; // Clear previous errors

                        // Frontend Validation
                        const validCodeRegex = /^[A-Z0-9]{8}$/;
                        if (!code) {
                            referralError.textContent = 'Please enter a referral code.';
                            return;
                        }
                        if (code.length !== 8) {
                            referralError.textContent = 'Referral code must be 8 characters long.';
                            return;
                        }
                        if (!validCodeRegex.test(code)) {
                            referralError.textContent = 'Invalid characters in code. Use letters and numbers only.';
                            return;
                        }

                        try {
                            const response = await fetch('/api/referral/claim', {
                                method: 'POST',
                                headers: { 'Content-Type': 'application/json' },
                                body: JSON.stringify({ code })
                            });

                            const result = await response.json();

                            if (result.success) {
                                Toast.fire({
                                    icon: 'success',
                                    title: result.message || 'Referral claimed successfully!'
                                });
                                closeModal();
                            } else {
                                referralError.textContent = result.message || 'An unknown error occurred.';
                            }
                        } catch (error) {
                            console.error('Referral claim error:', error);
                            referralError.textContent = 'Could not connect to the server. Please try again.';
                        }
                    };
                });


            </script>
</body>

</html>