<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giftora - Premium Lifestyle Store</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #111827; /* Darker, more premium black/charcoal */
            --accent-color: #c0392b; /* Subtle red for accents/sales */
            --text-main: #374151;
            --text-light: #6B7280;
            --bg-body: #ffffff;
            --bg-secondary: #f9fafb;
            --border-radius: 8px;
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-hover: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            --transition: all 0.3s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            line-height: 1.6;
            color: var(--text-main);
            background-color: var(--bg-body);
            -webkit-font-smoothing: antialiased;
        }

        .container {
            max-width: 1280px;
            margin: 0 auto;
            padding: 0 1.5rem;
        }

        a {
            text-decoration: none;
            color: inherit;
        }

        /* Hero Section */
        .hero-section {
            background-color: var(--bg-secondary);
            padding: 4rem 0;
            margin-bottom: 4rem;
        }

        .hero-content {
            display: grid;
            grid-template-columns: 1fr;
            gap: 3rem;
            align-items: center;
        }

        @media (min-width: 768px) {
            .hero-content {
                grid-template-columns: 1fr 1fr;
                padding: 2rem 0;
            }
        }

        .text-content {
            text-align: center;
        }

        @media (min-width: 768px) {
            .text-content {
                text-align: left;
            }
        }

        .main-headline {
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
            line-height: 1.2;
            color: var(--primary-color);
            margin-bottom: 1.5rem;
        }

        @media (min-width: 768px) {
            .main-headline {
                font-size: 3.5rem;
            }
        }

        .subheading {
            font-size: 1.125rem;
            color: var(--text-light);
            margin-bottom: 2rem;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }

        @media (min-width: 768px) {
            .subheading {
                margin-left: 0;
                margin-right: 0;
            }
        }

        .cta-button {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 0.875rem 2rem;
            background-color: var(--primary-color);
            color: #ffffff;
            font-weight: 500;
            border-radius: var(--border-radius);
            transition: var(--transition);
            box-shadow: var(--shadow-sm);
        }

        .cta-button:hover {
            background-color: #000000;
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }
        
        .cta-arrow {
            margin-left: 0.5rem;
            transition: transform 0.3s ease;
        }
        
        .cta-button:hover .cta-arrow {
            transform: translateX(4px);
        }

        .hero-image-wrapper {
            position: relative;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: var(--shadow-md);
        }

        .hero-image {
            width: 100%;
            height: auto;
            display: block;
            object-fit: cover;
        }

        /* Section Styling */
        .section {
            margin-bottom: 5rem;
        }

        .section-header {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 3rem;
            gap: 1rem;
        }
        
        @media (min-width: 640px) {
            .section-header {
                flex-direction: row;
                align-items: flex-end;
            }
        }

        .section-title h2 {
            font-family: 'Playfair Display', serif;
            font-size: 2rem;
            color: var(--primary-color);
            margin-bottom: 0.5rem;
        }

        .section-subtitle {
            color: var(--text-light);
            font-size: 1rem;
        }

        .view-all-link {
            color: var(--primary-color);
            font-weight: 600;
            font-size: 0.95rem;
            border-bottom: 1px solid transparent;
            transition: border-color 0.2s;
        }

        .view-all-link:hover {
            border-color: var(--primary-color);
        }

        /* Product Grid */
        .products-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1.5rem;
        }

        @media (min-width: 640px) {
            .products-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @media (min-width: 768px) {
            .products-grid {
                grid-template-columns: repeat(3, 1fr);
            }
        }

        @media (min-width: 1024px) {
            .products-grid {
                grid-template-columns: repeat(4, 1fr);
            }
        }

        /* Product Card */
        .product-card {
            background: #fff;
            border: 1px solid #f3f4f6;
            border-radius: var(--border-radius);
            overflow: hidden;
            transition: var(--transition);
            display: flex;
            flex-direction: column;
            position: relative;
        }

        .product-card:hover {
            box-shadow: var(--shadow-hover);
            transform: translateY(-4px);
            border-color: #e5e7eb;
        }

        .product-image-container {
            position: relative;
            aspect-ratio: 1;
            background-color: #f3f4f6;
            overflow: hidden;
        }

        .product-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .product-card:hover .product-img {
            transform: scale(1.05);
        }

        .wishlist-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            width: 36px;
            height: 36px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.9);
            border: none;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: var(--transition);
            color: var(--text-light);
            z-index: 10;
        }
        
        .wishlist-btn:hover {
            transform: scale(1.1);
        }

        .wishlist-btn.active {
            color: #ef4444; 
        }

        .discount-badge {
            position: absolute;
            top: 10px;
            left: 10px;
            background-color: var(--accent-color);
            color: #fff;
            font-size: 0.75rem;
            font-weight: 600;
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
        }

        .product-info {
            padding: 1rem;
            display: flex;
            flex-direction: column;
            flex: 1;
        }

        .product-name {
            font-size: 1rem;
            font-weight: 500;
            color: var(--text-main);
            margin-bottom: 0.5rem;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            height: 2.8em; /* Ensure consistent height */
        }

        .product-price {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 1rem;
        }

        .current-price {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--primary-color);
        }

        .original-price {
            font-size: 0.9rem;
            color: var(--text-light);
            text-decoration: line-through;
        }

        .add-to-cart-btn {
            margin-top: auto; /* Push to bottom */
            width: 100%;
            padding: 0.75rem;
            background-color: transparent;
            border: 1px solid var(--primary-color);
            color: var(--primary-color);
            border-radius: var(--border-radius);
            font-weight: 500;
            cursor: pointer;
            transition: var(--transition);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .add-to-cart-btn:hover {
            background-color: var(--primary-color);
            color: #fff;
        }

        /* Empty State */
        .empty-state {
            grid-column: 1 / -1;
            text-align: center;
            padding: 4rem 1rem;
            color: var(--text-light);
        }
        
        .empty-state i {
            font-size: 3rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }

        /* Toast & Referral Overrides - keep functional but clean */
        .toast-container {
            z-index: 9999;
        }

        /* Referral Modal - Clean Design */
        .referral-modal-overlay {
            position: fixed;
            top: 0; left: 0; width: 100%; height: 100%;
            background: rgba(0,0,0,0.5);
            backdrop-filter: blur(2px);
            z-index: 10000;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s;
        }
        .referral-modal-overlay.show {
            opacity: 1; visibility: visible;
        }
        .referral-modal-content {
            background: #fff;
            padding: 2rem;
            border-radius: 12px;
            width: 90%;
            max-width: 400px;
            text-align: center;
            box-shadow: var(--shadow-hover);
        }
        .referral-modal-buttons {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
            margin-top: 1.5rem;
        }
        .referral-btn {
            padding: 0.75rem;
            border-radius: var(--border-radius);
            cursor: pointer;
            font-weight: 500;
            border: none;
        }
        .referral-submit { background: var(--primary-color); color: #fff; }
        .referral-skip { background: #e5e7eb; color: var(--text-main); }
        
        #referralCodeInput {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #d1d5db;
            border-radius: var(--border-radius);
            margin-top: 1rem;
            text-align: center;
            font-size: 1.1rem;
            letter-spacing: 2px;
        }
        
        .referral-error-message {
            color: #ef4444;
            font-size: 0.875rem;
            margin-top: 0.5rem;
            min-height: 1.25rem;
        }

    </style>
</head>

<body>
    <%- include('../partials/user/newheader.ejs') %>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container hero-content">
            <div class="text-content">
                <h1 class="main-headline">Transform Moments into Memories</h1>
                <p class="subheading">Thoughtfully curated gifts that bring joy to your loved ones.</p>
                <a href="/viewProducts" class="cta-button">
                    Shop Collection
                    <svg class="cta-arrow" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                        <polyline points="12 5 19 12 12 19"></polyline>
                    </svg>
                </a>
            </div>
           
        </div>
    </section>

    <!-- New Arrivals -->
    <div class="container section">
        <div class="section-header">
            <div class="section-title">
                <h2>New Arrivals</h2>
                <p class="section-subtitle">Fresh additions to our exclusive collection</p>
            </div>
            <a href="/viewProducts" class="view-all-link">View All Products &rarr;</a>
        </div>

        <div class="products-grid">
            <% if (products && products.length > 0) { %>
                <% for(let i=0; i < products.length; i++) { %>
                <div class="product-card">
                    <div class="product-image-container">
                        <% if (products[i].productImage) { %>
                            <a href="/productsDetails/<%=products[i]._id%>">
                                <img src="<%= products[i].productImage %>" alt="<%= products[i].productName %>" class="product-img">
                            </a>
                        <% } else { %>
                            <div style="display: flex; align-items: center; justify-content: center; height: 100%; color: #ccc;">
                                <i class="fas fa-image" style="font-size: 2rem;"></i>
                            </div>
                        <% } %>

                        <% if (products[i].bestOffer) { %>
                            <span class="discount-badge">-<%= products[i].bestOffer %>%</span>
                        <% } %>

                        <% if (user) { %>
                            <button type="button" onclick="addWishlist('<%= products[i]._id %>', this)" 
                                class="wishlist-btn <%= wishlistId.includes(products[i]._id.toString()) ? 'active' : '' %>">
                                <i class="<%= wishlistId.includes(products[i]._id.toString()) ? 'fas' : 'far' %> fa-heart"></i>
                            </button>
                        <% } else { %>
                            <button type="button" onclick="handleWishlistClick()" class="wishlist-btn">
                                <i class="far fa-heart"></i>
                            </button>
                        <% } %>
                    </div>

                    <div class="product-info">
                        <h3 class="product-name"><%= products[i].productName %></h3>
                        
                        <div class="product-price">
                            <span class="current-price">₹<%= products[i].salesPrice %></span>
                            <span class="original-price">₹<%= products[i].regularPrice %></span>
                        </div>

                        <button type="button" data-id="<%=products[i]._id%>" onclick="addToCart(this)" class="add-to-cart-btn">
                            <i class="fas fa-shopping-cart"></i> Add to Cart
                        </button>
                    </div>
                </div>
                <% } %>
            <% } else { %>
                <div class="empty-state">
                    <i class="fas fa-box-open"></i>
                    <p>No new arrivals at the moment.</p>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Best Sellers -->
    <div class="container section">
        <div class="section-header">
            <div class="section-title">
                <h2>Best Sellers</h2>
                <p class="section-subtitle">Our most loved products this season</p>
            </div>
            <!-- Optional: Link to best sellers specifically if route exists -->
        </div>

        <div class="products-grid">
            <% if (bestselling && bestselling.length > 0) { %>
                <% for(let i=0; i < bestselling.length; i++) { %>
                <div class="product-card">
                    <div class="product-image-container">
                        <% if (bestselling[i].productImage) { %>
                            <a href="/productsDetails/<%=bestselling[i]._id%>">
                                <img src="<%= bestselling[i].productImage %>" alt="<%= bestselling[i].productName %>" class="product-img">
                            </a>
                        <% } else { %>
                            <div style="display: flex; align-items: center; justify-content: center; height: 100%; color: #ccc;">
                                <i class="fas fa-image" style="font-size: 2rem;"></i>
                            </div>
                        <% } %>

                        <% if (bestselling[i].bestOffer) { %>
                            <span class="discount-badge">-<%= bestselling[i].bestOffer %>%</span>
                        <% } %>

                        <% if (user) { %>
                            <button type="button" onclick="addWishlist('<%= bestselling[i]._id %>', this)" 
                                class="wishlist-btn <%= wishlistId.includes(bestselling[i]._id.toString()) ? 'active' : '' %>">
                                <i class="<%= wishlistId.includes(bestselling[i]._id.toString()) ? 'fas' : 'far' %> fa-heart"></i>
                            </button>
                        <% } else { %>
                            <button type="button" onclick="handleWishlistClick()" class="wishlist-btn">
                                <i class="far fa-heart"></i>
                            </button>
                        <% } %>
                    </div>

                    <div class="product-info">
                        <h3 class="product-name"><%= bestselling[i].productName %></h3>
                        
                        <div class="product-price">
                            <span class="current-price">₹<%= bestselling[i].salesPrice %></span>
                            <span class="original-price">₹<%= bestselling[i].regularPrice %></span>
                        </div>

                        <button type="button" data-id="<%=bestselling[i]._id%>" onclick="addToCart(this)" class="add-to-cart-btn">
                            <i class="fas fa-shopping-cart"></i> Add to Cart
                        </button>
                    </div>
                </div>
                <% } %>
            <% } else { %>
                <div class="empty-state">
                    <i class="fas fa-trophy"></i>
                    <p>No best sellers yet.</p>
                </div>
            <% } %>
        </div>
    </div>

    <%- include('../partials/user/footer.ejs') %>

    <!-- Referral Modal -->
    <% if(user && user.isFirstLogin===true){ %>
    <div id="referralModal" class="referral-modal-overlay">
        <div class="referral-modal-content">
            <h2 style="font-size: 1.5rem; margin-bottom: 0.5rem; color: var(--primary-color);">Have a Referral Code?</h2>
            <p style="color: var(--text-light); font-size: 0.95rem;">Enter a code to claim your reward!</p>
            <form id="referralForm" onsubmit="submitReferral(event)">
                <div id="referralError" class="referral-error-message"></div>
                <input type="text" id="referralCodeInput" placeholder="CODE123" maxlength="8" autocomplete="off">
                <div class="referral-modal-buttons">
                    <button type="button" id="skipReferralBtn" class="referral-btn referral-skip">Skip</button>
                    <button type="submit" id="submitReferralBtn" class="referral-btn referral-submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
    <% } %>

    <div id="toastContainer" class="toast-container" style="position: fixed; bottom: 20px; right: 20px;"></div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        window.isLoggedIn = <%- !!user %>;

        // --- Scripts kept mostly identical but ensured references match new IDs/Classes ---

        function handleWishlistClick() {
            if (!window.isLoggedIn) {
                Swal.fire({
                    icon: 'info',
                    title: 'Login Required',
                    text: 'Please login to add items to your wishlist',
                    showCancelButton: true,
                    confirmButtonText: 'Login',
                    confirmButtonColor: '#111827',
                    cancelButtonText: 'Cancel'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = '/login';
                    }
                });
                return;
            }
        }

        async function addToCart(button) {
            const productId = button.getAttribute('data-id');
            try {
                const response = await fetch('/cart', {
                    method: "POST",
                    headers: { 'Content-Type': 'application/json', 'Accept': 'application/json' },
                    body: JSON.stringify({ productId, quantity: 1 })
                });

                const contentType = response.headers.get("content-type");
                if (!contentType || !contentType.includes("application/json")) {
                    Swal.fire({
                        icon: 'info',
                        title: "Login Required",
                        text: "Please login to add items to your cart.",
                        showCancelButton: true,
                        confirmButtonText: "Login",
                        confirmButtonColor: '#111827'
                    }).then((result) => {
                        if (result.isConfirmed) window.location.href = '/login';
                    });
                    return;
                }

                const data = await response.json();
                if (data.success) {
                    Toast.fire({ icon: 'success', title: 'Added to cart' });
                    // Helper function to update cart count if it exists globally
                    if(window.updateCartCount) await updateCartCount();
                } else {
                    if (data.message === 'Unauthorized: Please login') {
                         Swal.fire({
                            icon: 'info',
                            title: "Login Required",
                            confirmButtonText: "Login",
                            showCancelButton: true,
                            confirmButtonColor: '#111827'
                        }).then((res) => {
                            if (res.isConfirmed) window.location.href = "/login";
                        });
                        return;
                    }
                    Toast.fire({ icon: 'error', title: data.message || 'Failed to add' });
                }
            } catch (err) {
                console.error(err);
                Toast.fire({ icon: 'error', title: 'Something went wrong' });
            }
        }

        async function addWishlist(productId, button) {
            try {
                const res = await fetch(`/wishlist/add/`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json', 'Accept': 'application/json' },
                    body: JSON.stringify({ productId }),
                });
                const result = await res.json();
                if (result.success) {
                    const icon = button.querySelector("i.fa-heart");
                    if (result.inWishlist) {
                        icon.classList.remove("far");
                        icon.classList.add("fas");
                        button.classList.add("active");
                    } else {
                        icon.classList.remove("fas");
                        icon.classList.add("far");
                        button.classList.remove("active");
                    }
                     if(window.updateCartCount) await updateCartCount(); // Sometimes Wishlist count is also updated here
                     Toast.fire({ icon: 'success', title: result.message || "Wishlist updated" });
                } else {
                     if (result.message === "user not found") {
                        Swal.fire({
                            icon: 'info',
                            title: "Login Required",
                            confirmButtonText: "Login",
                            showCancelButton: true
                        }).then((res) => { if (res.isConfirmed) window.location.href = "/login"; });
                        return;
                    }
                    Toast.fire({ icon: 'error', title: result.message || 'Failed' });
                }
            } catch (err) {
                console.error(err);
                Toast.fire({ icon: 'error', title: 'Server error' });
            }
        }

        const Toast = Swal.mixin({
            toast: true,
            position: 'bottom-end',
            showConfirmButton: false,
            timer: 2000,
            timerProgressBar: true,
            didOpen: (toast) => {
                toast.addEventListener('mouseenter', Swal.stopTimer);
                toast.addEventListener('mouseleave', Swal.resumeTimer);
            }
        });

        // Referral Logic
        document.addEventListener('DOMContentLoaded', () => {
            const isFirstLogin = <%- !!(user && user.isFirstLogin === true) %>;
            const referralModal = document.getElementById('referralModal');
            const skipButton = document.getElementById('skipReferralBtn');
            const submitButton = document.getElementById('submitReferralBtn');
            const referralError = document.getElementById('referralError');
            const referralInput = document.getElementById('referralCodeInput');

            if (isFirstLogin && referralModal) {
                setTimeout(() => {
                    referralModal.classList.add('show');
                }, 1000);
            }

            const closeModal = () => {
                if (referralModal) {
                    referralModal.classList.remove('show');
                    setTimeout(() => referralModal.style.display = 'none', 300);
                }
            };

            if(skipButton) {
                skipButton.addEventListener('click', async () => {
                    try {
                        await fetch('/api/referral/skip', { method: 'POST' });
                    } catch (error) { console.error(error); } 
                    finally { closeModal(); }
                });
            }

            window.submitReferral = async (event) => {
                event.preventDefault();
                const code = referralInput.value.trim().toUpperCase();
                referralError.textContent = '';

                if (!code || code.length !== 8) {
                    referralError.textContent = 'Invalid code length (must be 8).';
                    return;
                }

                try {
                    const response = await fetch('/api/referral/claim', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ code })
                    });
                    const result = await response.json();
                    if (result.success) {
                        Toast.fire({ icon: 'success', title: 'Referral claimed!' });
                        closeModal();
                    } else {
                        referralError.textContent = result.message || 'Error claiming code.';
                    }
                } catch (error) {
                    referralError.textContent = 'Connection error.';
                }
            };
        });
    </script>
</body>
</html>