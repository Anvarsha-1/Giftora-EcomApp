<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Orders</title>
    <link href="/styles/output.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdn.tutorialjinni.com/sweetalert2/11.14.3/sweetalert2.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        /* Custom styles for header image and layout */
        .header-image {
            width: 16rem;
            height: 8rem;
            object-fit: contain;
        }

        .content-wrapper {
            display: flex;
            gap: 1.5rem;
            max-width: 80rem;
            margin: 0 auto;
            padding: 2rem 1rem;
        }

        .sidebar {
            width: 16rem;
            background-color: #f9fafb;
            border-radius: 0.5rem;
            padding: 1.5rem;
        }

        .main-content {
            flex: 1;
        }

        @media (max-width: 768px) {
            .content-wrapper {
                flex-direction: column;
            }

            .sidebar {
                width: 100%;
            }

            .main-content {
                width: 100%;
            }
        }

        /* Status badge styles */
        .status-badge {
            padding: 0.15rem 0.6em;
            border-radius: 9999px;
            font-size: 0.75rem;
            font-weight: 500;
            text-align: center;
            display: inline-block;
        }

        /* Enhanced visual styles */
        .order-section {
            background: white;
            border-radius: 0.5rem;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
            border: 1px solid #e5e7eb;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .order-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #e5e7eb;
        }

        .order-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: #1f2937;
        }

        .action-buttons {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .btn {
            padding: 0.5rem 1rem;
            border-radius: 0.375rem;
            font-weight: 500;
            text-decoration: none;
            transition: all 0.2s;
            border: none;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-primary {
            background-color: #2563eb;
            color: white;
        }

        .btn-primary:hover {
            background-color: #1d4ed8;
        }

        .btn-danger {
            background-color: #dc2626;
            color: white;
        }

        .btn-danger:hover {
            background-color: #b91c1c;
        }

        .btn-warning {
            background-color: #ea580c;
            color: white;
        }

        .btn-warning:hover {
            background-color: #c2410c;
        }

        .btn-secondary {
            background-color: #6b7280;
            color: white;
        }

        .btn-secondary:hover {
            background-color: #4b5563;
        }

        .status-badge {
            padding: 0.25rem 0.75rem;
            border-radius: 9999px;
            font-size: 0.75rem;
            font-weight: 500;
            text-align: center;
            display: inline-block;
        }

        .status-pending {
            background-color: #fef3c7;
            color: #92400e;
        }

        .status-processing {
            background-color: #dbeafe;
            color: #1e40af;
        }

        .status-shipped {
            background-color: #d1fae5;
            color: #065f46;
        }

        .status-delivered {
            background-color: #dcfce7;
            color: #166534;
        }

        .status-cancelled {
            background-color: #fee2e2;
            color: #991b1b;
        }

        .status-returned {
            background-color: #fef3c7;
            color: #92400e;
        }

        /* Three-column layout for order info */
        .order-info-grid {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr;
            gap: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .order-info-card {
            background: #f9fafb;
            padding: 1rem;
            border-radius: 0.375rem;
            border: 1px solid #e5e7eb;
        }

        .order-info-card h3 {
            font-size: 0.875rem;
            font-weight: 600;
            color: #374151;
            margin-bottom: 0.5rem;
        }

        .order-info-card .status-badge {
            margin-bottom: 0.5rem;
        }

        .order-info-card dl {
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
        }

        .order-info-card dt {
            font-weight: 500;
            color: #6b7280;
            font-size: 0.75rem;
        }

        .order-info-card dd {
            color: #1f2937;
            font-size: 0.875rem;
        }

        .final-amount {
            font-size: 1.125rem;
            font-weight: 700;
            color: #1d4ed8;
        }

        /* Coupon policy card */
        .coupon-policy-card {
            background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
            border: 1px solid #93c5fd;
            border-left-width: 4px;
            border-radius: 0.375rem;
            padding: 1rem;
        }

        .coupon-policy-card h3 {
            font-size: 0.875rem;
            font-weight: 600;
            color: #1e40af;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .coupon-policy-card p,
        .coupon-policy-card ul {
            font-size: 0.75rem;
            color: #1e40af;
            line-height: 1.4;
            margin-bottom: 0.25rem;
        }

        .coupon-policy-card ul {
            margin-left: 1rem;
            list-style-type: disc;
        }

        /* Shipping address and summary styles */
        .address-section,
        .summary-section {
            background: #f9fafb;
            padding: 1rem;
            border-radius: 0.375rem;
            border: 1px solid #e5e7eb;
            margin-bottom: 1rem;
        }

        .address-section h3,
        .summary-section h3 {
            font-size: 0.875rem;
            font-weight: 600;
            color: #374151;
            margin-bottom: 0.75rem;
        }

        .address-section dl {
            display: grid;
            grid-template-columns: auto 1fr;
            gap: 0.5rem 1rem;
            font-size: 0.875rem;
        }

        .address-section dt {
            font-weight: 500;
            color: #6b7280;
        }

        .address-section dd {
            color: #1f2937;
        }

        .item-row {
            display: flex;
            align-items: center;
            justify-content: space-between;
            background: white;
            padding: 1rem;
            border-radius: 0.375rem;
            border: 1px solid #e5e7eb;
            margin-bottom: 0.5rem;
        }

        .item-info {
            display: flex;
            align-items: center;
            gap: 1rem;
            flex: 1;
        }

        .item-image {
            width: 3rem;
            height: 3rem;
            object-fit: cover;
            border-radius: 0.25rem;
            border: 1px solid #d1d5db;
        }

        .item-details h4 {
            font-weight: 500;
            color: #1f2937;
            margin-bottom: 0.25rem;
        }

        .item-details p {
            font-size: 0.75rem;
            color: #6b7280;
        }

        .item-price {
            font-weight: 600;
            color: #1f2937;
            white-space: nowrap;
        }

        .item-actions {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        /* Responsive adjustments */
        @media (max-width: 1024px) {
            .order-info-grid {
                grid-template-columns: 1fr;
                gap: 1rem;
            }

            .order-info-card {
                padding: 0.75rem;
            }
        }

        @media (max-width: 768px) {
            .order-header {
                flex-direction: column;
                align-items: stretch;
                gap: 1rem;
            }

            .action-buttons {
                justify-content: center;
            }

            .address-section dl {
                grid-template-columns: 1fr;
                gap: 0.25rem;
            }

            .item-row {
                flex-direction: column;
                align-items: stretch;
                gap: 0.75rem;
            }

            .item-info {
                justify-content: space-between;
            }

            .item-actions {
                justify-content: space-between;
            }
        }
    </style>
</head>

<body class="bg-gray-100 min-h-screen">
    <!-- Header -->
    <%- include("../partials/user/newheader.ejs") %>

        <div class="content-wrapper">
            <%- include("../partials/user/myaccountSidebar.ejs") %>
                <!-- Main Content -->
                <main class="main-content">
                    <div class="order-section">
                        <div class="order-header">
                            <h1 class="order-title">Order Details</h1>
                            <div class="action-buttons">
                                <a href="/orders" class="btn btn-primary">
                                    <i class="fas fa-arrow-left"></i>
                                    Back to Orders
                                </a>
                                <% if (order && order.paymentStatus !=='Failed' ) { %>
                                    <% if (order.status==='Cancelled' ) { %>
                                        <span class="status-badge status-cancelled">Order Cancelled</span>
                                        <% } else if (order.status==='Delivered' ) { %>
                                            <% if (order.returnStatus) { %>
                                                <span
                                                    class="status-badge status-<%= order.returnStatus.toLowerCase().replace(' ', '-') %>">
                                                    Return <%= order.returnStatus %>
                                                </span>
                                                <% } else if (!orderHasReturn) { %>
                                                    <button id="return-order-btn" class="btn btn-warning"
                                                        data-order-id="<%= order.orderId %>">
                                                        <i class="fas fa-undo"></i>
                                                        Return Order
                                                    </button>
                                                    <% } %>
                                                        <% } %>
                                                            <% const cancellable=['Pending', 'Shipped' , 'Processing' ];
                                                                %>
                                                                <% if (cancellable.includes(order.status)) { %>
                                                                    <button id="cancelAllOrders" class="btn btn-danger"
                                                                        data-order-id="<%= order.orderId %>">
                                                                        <i class="fas fa-times"></i>
                                                                        Cancel Order
                                                                    </button>
                                                                    <% } %>
                                                                        <% } %>
                            </div>
                        </div>

                        <% if (order) { %>
                            <!-- Customer Details -->
                            <% if (user) { %>
                                <div class="address-section mb-4">
                                    <h3><i class="fas fa-user mr-2"></i>Customer Details</h3>
                                    <dl>
                                        <dt>Name:</dt>
                                        <dd>
                                            <%= user.firstName %>
                                                <%= user.lastName || '' %>
                                        </dd>
                                        <dt>Email:</dt>
                                        <dd>
                                            <%= user.email %>
                                        </dd>
                                    </dl>
                                </div>
                                <% } %>

                                    <!-- Order Info Grid: Three columns on desktop -->
                                    <div class="order-info-grid">
                                        <!-- Order Info Card -->
                                        <div class="order-info-card">
                                            <h3><i class="fas fa-info-circle mr-2"></i>Order Info</h3>
                                            <dl>
                                                <dt>Order ID:</dt>
                                                <dd>
                                                    <%= order.orderId %>
                                                </dd>
                                                <dt>Order Date:</dt>
                                                <dd>
                                                    <%= new Date(order.createdOn).toLocaleString('en-US', {
                                                        dateStyle: 'medium' , timeStyle: 'short' }) %>
                                                </dd>
                                                <dt>Payment Method:</dt>
                                                <dd>
                                                    <%= order.paymentMethod %>
                                                </dd>
                                                <dt>Payment Status:</dt>
                                                <dd><span
                                                        class="status-badge status-<%= order.paymentStatus.toLowerCase() %>">
                                                        <%= order.paymentStatus %>
                                                    </span></dd>
                                                <% if (order.couponApplied) { %>
                                                    <dt>Coupon Applied:</dt>
                                                    <dd>
                                                        <%= order.couponCode %> (₹<%= order.couponDiscount.toFixed(2) %>
                                                                )
                                                    </dd>
                                                    <% } %>
                                            </dl>
                                        </div>

                                        <!-- Order Status & Price Card -->
                                        <div class="order-info-card">
                                            <h3><i class="fas fa-chart-line mr-2"></i>Order Status & Price</h3>
                                            <span class="status-badge status-<%= order.status.toLowerCase() %>">
                                                <%= order.status %>
                                            </span>
                                            <dl class="mt-2">
                                                <dt>Subtotal:</dt>
                                                <dd>₹<%= order.totalPrice?.toFixed(2) || '0.00' %>
                                                </dd>
                                                <dt>Shipping:</dt>
                                                <dd>₹<%= order.shippingCharge?.toFixed(2) || '0.00' %>
                                                </dd>
                                                <% if (order.couponDiscount) { %>
                                                    <dt>Coupon Discount:</dt>
                                                    <dd>-₹<%= order.couponDiscount.toFixed(2) %>
                                                    </dd>
                                                    <% } %>
                                                        <dt class="final-amount">Final Amount:</dt>
                                                        <dd class="final-amount">₹<%= order.finalAmount?.toFixed(2)
                                                                || '0.00' %>
                                                        </dd>
                                            </dl>
                                        </div>

                                        <!-- Coupon Policy Card (conditional) -->
                                        <% if (order.couponApplied && order.couponDiscount> 0) { %>
                                            <div class="order-info-card coupon-policy-card">
                                                <h3><i class="fas fa-tag mr-2"></i>Coupon & Refund Policy</h3>
                                                <p>A coupon <strong>
                                                        <%= order.couponCode %>
                                                    </strong> was applied, giving you a total discount of <strong>₹<%=
                                                            order.couponDiscount.toFixed(2) %></strong>.</p>
                                                <p>The discount is distributed proportionally across all items in your
                                                    order.</p>
                                                <p class="font-semibold">On Cancellation/Return:</p>
                                                <ul>
                                                    <li>Your refund for any cancelled or returned item will be the
                                                        item's price minus its share of the coupon discount.</li>
                                                    <li>This ensures the refund amount matches what you actually paid
                                                        for that item.</li>
                                                </ul>
                                            </div>
                                            <% } else { %>
                                                <!-- Empty placeholder for grid alignment -->
                                                <div class="order-info-card" style="visibility: hidden;">
                                                    <h3>&nbsp;</h3>
                                                    <dl>&nbsp;</dl>
                                                </div>
                                                <% } %>
                                    </div>

                                    <!-- Shipping Address -->
                                    <% if (order.address) { %>
                                        <div class="address-section">
                                            <h3><i class="fas fa-map-marker-alt mr-2"></i>Shipping Address</h3>
                                            <dl>
                                                <dt>Name:</dt>
                                                <dd>
                                                    <%= order.fullName %>
                                                </dd>
                                                <dt>Mobile:</dt>
                                                <dd>
                                                    <%= order.mobileNumber %>
                                                </dd>
                                                <dt>Address:</dt>
                                                <dd>
                                                    <%= order.address %>, <%= order.city %>, <%= order.district %>, <%=
                                                                    order.state %> - <%= order.pinCode %>
                                                </dd>
                                                <% if (order.landmark) { %>
                                                    <dt>Landmark:</dt>
                                                    <dd>
                                                        <%= order.landmark %>
                                                    </dd>
                                                    <% } %>
                                                        <dt>Type:</dt>
                                                        <dd>
                                                            <%= order.addressType %>
                                                        </dd>
                                            </dl>
                                        </div>
                                        <% } %>

                                            <!-- Order Summary -->
                                            <div class="summary-section">
                                                <h3><i class="fas fa-list mr-2"></i>Order Summary</h3>
                                                <div class="space-y-2">
                                                    <% order.orderedItems.forEach(function(item) { %>
                                                        <div class="item-row">
                                                            <div class="item-info">
                                                                <img src="<%= item.productId?.productImage?.[0]?.url || '/default-image.png' %>"
                                                                    alt="<%= item.productId?.productName || 'Product' %>"
                                                                    class="item-image">
                                                                <div class="item-details">
                                                                    <h4>
                                                                        <%= item.productId?.productName
                                                                            || 'Unnamed Product' %>
                                                                    </h4>
                                                                    <p>Qty: <%= item.quantity %> | ₹<%=
                                                                                item.price?.toFixed(2) || 'N/A' %> each
                                                                    </p>
                                                                </div>
                                                            </div>
                                                            <div class="item-price">₹<%= item.price ? (item.price *
                                                                    item.quantity).toFixed(2) : 'N/A' %>
                                                            </div>
                                                            <div class="item-actions">
                                                                <span
                                                                    class="status-badge status-<%= item.status.toLowerCase() %>">
                                                                    <%= item.status %>
                                                                </span>
                                                                <% if (order.paymentStatus !=='Failed' ) { %>
                                                                    <% if (item.status==='Delivered' ) { %>
                                                                        <% if (item.adminApprovalStatus==='Rejected' ) {
                                                                            %>
                                                                            <span
                                                                                class="status-badge status-cancelled">Return
                                                                                Rejected: <%= item.adminRejectionReason
                                                                                    %></span>
                                                                            <span
                                                                                class="status-badge status-cancelled">Status:
                                                                                <%= item.adminApprovalStatus %></span>
                                                                            <% } else if
                                                                                (item.returnStatus==='Return Request' ||
                                                                                item.returnStatus==='Returned' ) { %>
                                                                                <span
                                                                                    class="status-badge status-<%= item.adminApprovalStatus.toLowerCase() %>">
                                                                                    Return <%= item.adminApprovalStatus
                                                                                        %>
                                                                                </span>
                                                                                <% } else { %>
                                                                                    <button
                                                                                        class="return-item-btn btn btn-warning"
                                                                                        data-order-id="<%= order.orderId %>"
                                                                                        data-item-id="<%= item._id %>">
                                                                                        <i class="fas fa-undo"></i>
                                                                                        Return Item
                                                                                    </button>
                                                                                    <% } %>
                                                                                        <% } else if
                                                                                            (['Pending', 'Shipped'
                                                                                            , 'Processing'
                                                                                            ].includes(item.status)) {
                                                                                            %>
                                                                                            <button
                                                                                                class="cancel-item-btn btn btn-danger"
                                                                                                data-order-id="<%= order.orderId %>"
                                                                                                data-item-id="<%= item._id %>">
                                                                                                <i
                                                                                                    class="fas fa-times"></i>
                                                                                                Cancel
                                                                                            </button>
                                                                                            <% } %>
                                                                                                <% } %>
                                                            </div>
                                                        </div>
                                                        <% }); %>
                                                </div>
                                            </div>

                                            <% if (order.paymentStatus==='Failed' ) { %>
                                                <div class="text-center mt-6">
                                                    <button onclick="retryPayment(`<%= order.orderId %>`)"
                                                        id="retryPaymentBtn" class="btn btn-danger">
                                                        <i class="fas fa-redo"></i> Retry Payment
                                                    </button>
                                                </div>
                                                <% } %>
                                                    <% } else { %>
                                                        <!-- Empty State -->
                                                        <div
                                                            class="text-center py-16 bg-white rounded-lg shadow-md border border-gray-200">
                                                            <svg class="mx-auto mb-4 w-16 h-16 text-gray-300"
                                                                fill="none" stroke="currentColor" stroke-width="1.5"
                                                                viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                                    d="M6 7V6a6 6 0 1112 0v1m-1 0H7m10 0a2 2 0 012 2v9a2 2 0 01-2 2H7a2 2 0 01-2-2V9a2 2 0 012-2h10z" />
                                                            </svg>
                                                            <div class="text-lg font-medium text-gray-700 mb-4">You
                                                                haven't placed any orders yet.</div>
                                                            <a href="/viewproducts" class="btn btn-primary">Start
                                                                Shopping</a>
                                                        </div>
                                                        <% } %>
                    </div>
                </main>
        </div>

        <!-- Only one SweetAlert2 script, at the end of body -->
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            function retryPayment(orderId) {
                window.location.href = `/payment/retry-payment/${orderId}`;
            }

            // Run after DOM is loaded
            window.onload = function () {
                // Cancel All Orders
                const cancelAllOrdersBtn = document.getElementById('cancelAllOrders');
                if (cancelAllOrdersBtn) {
                    cancelAllOrdersBtn.addEventListener('click', function () {
                        const orderId = cancelAllOrdersBtn.getAttribute('data-order-id');
                        Swal.fire({
                            title: 'Cancel Order?',
                            html: `
                            <label for="cancel-reason-select" class="block mb-2 text-sm font-medium text-gray-700">Select a reason</label>
                            <select id="cancel-reason-select" class="swal2-input" style="width:100%">
                                <option value="">-- Please select --</option>
                                <option value="Accidentally placed the order">Accidentally placed the order</option>
                                <option value="Found a lower price elsewhere">Found a lower price elsewhere</option>
                                <option value="Order taking too long to deliver">Order taking too long to deliver</option>
                                <option value="Changed my mind">Changed my mind</option>
                                <option value="Other">Other</option>
                            </select>
                            <input id="cancel-reason-other" class="swal2-input" style="display:none;margin-top:8px;" placeholder="Type your reason here...">
                        `,
                            focusConfirm: false,
                            showCancelButton: true,
                            confirmButtonColor: '#d33',
                            cancelButtonColor: '#3085d6',
                            confirmButtonText: 'Yes, cancel it!',
                            preConfirm: () => {
                                const select = document.getElementById('cancel-reason-select');
                                const otherInput = document.getElementById('cancel-reason-other');
                                if (!select.value) {
                                    Swal.showValidationMessage('Please select a reason for cancellation');
                                    return false;
                                }
                                if (select.value === 'Other') {
                                    if (!otherInput.value.trim()) {
                                        Swal.showValidationMessage('Please enter a reason');
                                        return false;
                                    }
                                    return otherInput.value.trim();
                                }
                                return select.value;
                            },
                            didOpen: () => {
                                const select = document.getElementById('cancel-reason-select');
                                const otherInput = document.getElementById('cancel-reason-other');
                                select.addEventListener('change', function () {
                                    if (this.value === 'Other') {
                                        otherInput.style.display = '';
                                    } else {
                                        otherInput.style.display = 'none';
                                    }
                                });
                            }
                        }).then((result) => {
                            if (result.isConfirmed && result.value) {
                                fetch(`/orders/${orderId}/cancel`, {
                                    method: 'PATCH',
                                    headers: { 'Content-Type': 'application/json' },
                                    body: JSON.stringify({ reason: result.value })
                                })
                                    .then(res => res.json())
                                    .then(data => {
                                        if (data.success) {
                                            Swal.fire('Cancelled!', 'Your order has been cancelled.', 'success').then(() => location.reload());
                                        } else {
                                            Swal.fire('Error', data.message || 'Could not cancel order.', 'error');
                                        }
                                    })
                                    .catch(error => {
                                        console.error('Error:', error);
                                        Swal.fire('Error', 'An error occurred while cancelling the order.', 'error');
                                    });
                            }
                        });
                    });
                }

                // Cancel Item (for each item)
                const cancelItemBtns = document.querySelectorAll('.cancel-item-btn');
                cancelItemBtns.forEach(function (btn) {
                    btn.addEventListener('click', function () {
                        const orderId = btn.getAttribute('data-order-id');
                        const itemId = btn.getAttribute('data-item-id');
                        Swal.fire({
                            title: 'Cancel Item?',
                            html: `
                            <label for="cancel-item-reason-select" class="block mb-2 text-sm font-medium text-gray-700">Select a reason</label>
                            <select id="cancel-item-reason-select" class="swal2-input" style="width:100%">
                                <option value="">-- Please select --</option>
                                <option value="Accidentally placed the order">Accidentally placed the order</option>
                                <option value="Found a lower price elsewhere">Found a lower price elsewhere</option>
