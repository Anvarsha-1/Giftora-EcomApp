                                        otherInput.style.display = 'none';
                                    }
                                });
                            }
                        }).then((result) => {
                            if (result.isConfirmed && result.value) {
                                fetch(`/orders/${orderId}/item/${itemId}/cancel`, {
                                    method: 'PATCH',
                                    headers: { 'Content-Type': 'application/json' },
                                    body: JSON.stringify({ reason: result.value })
                                })
                                    .then(res => res.json())
                                    .then(data => {
