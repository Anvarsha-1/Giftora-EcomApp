            <script id="reviewModal">
                document.addEventListener('DOMContentLoaded', function () {
                    const writeReviewBtn = document.getElementById('writeReviewBtn');
                    const reviewModal = document.getElementById('reviewModal');
                    const closeModal = document.getElementById('closeModal');
                    const cancelReview = document.getElementById('cancelReview');
                    const starButtons = document.querySelectorAll('.star-btn');
                    let selectedRating = 0;

                    if (writeReviewBtn && reviewModal) {
                        writeReviewBtn.addEventListener('click', function () {
                            reviewModal.classList.remove('hidden');
                        });

                        closeModal.addEventListener('click', function () {
                            reviewModal.classList.add('hidden');
                        });

                        cancelReview.addEventListener('click', function () {
                            reviewModal.classList.add('hidden');
                        });

                        reviewModal.addEventListener('click', function (e) {
                            if (e.target === reviewModal) {
                                reviewModal.classList.add('hidden');
                            }
                        });

                        starButtons.forEach((button, index) => {
                            button.addEventListener('click', function () {
                                selectedRating = parseInt(this.getAttribute('data-rating'));
                                updateStarDisplay();
                            });

                            button.addEventListener('mouseenter', function () {
                                const hoverRating = parseInt(this.getAttribute('data-rating'));
                                updateStarDisplay(hoverRating);
                            });
                        });

                        document.getElementById('starRating').addEventListener('mouseleave', function () {
                            updateStarDisplay();
                        });

                        function updateStarDisplay(hoverRating = null) {
                            const rating = hoverRating || selectedRating;
                            starButtons.forEach((button, index) => {
                                const starIcon = button.querySelector('i');
                                if (index < rating) {
                                    // Filled and Yellow
                                    starIcon.className = 'ri-star-fill';
                                    button.classList.remove('text-gray-200');
                                    button.classList.add('text-yellow-400');
                                } else {
                                    // Empty (or Filled but Gray)
                                    starIcon.className = 'ri-star-fill'; // Keeping fill shape but gray color for better look
                                    button.classList.remove('text-yellow-400');
                                    button.classList.add('text-gray-200');
                                }
                            });
                        }
                    }
                });
            </script>

