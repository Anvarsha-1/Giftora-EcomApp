    <style>
        @import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700&display=swap');

        :root {
            --primary: #1a1a1a;
            --primary-light: #333333;
            --accent: #2563eb;
            --success: #10b981;
            --danger: #ef4444;
            --warning: #f59e0b;
            --gray-50: #f9fafb;
            --gray-100: #f3f4f6;
            --gray-200: #e5e7eb;
            --gray-300: #d1d5db;
            --gray-500: #6b7280;
            --gray-700: #374151;
            --gray-800: #1f2937;
            --gray-900: #111827;
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            color: var(--gray-800);
            background-color: #ffffff;
        }

        /* Breadcrumb */
        .breadcrumb-nav {
            font-size: 0.875rem;
            color: var(--gray-500);
        }

        .breadcrumb-nav a {
            transition: color 0.2s;
        }

        .breadcrumb-nav a:hover {
            color: var(--primary);
        }

        /* Product Gallery */
        .gallery-container {
            position: relative;
        }

        .main-image-wrapper {
            position: relative;
            background: var(--gray-50);
            border-radius: 16px;
            overflow: hidden;
            aspect-ratio: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 1px solid var(--gray-100);
        }

        .zoom-lens {
            cursor: zoom-in;
        }

        .thumbnail-strip {
            display: flex;
            gap: 12px;
            margin-top: 16px;
            overflow-x: auto;
            padding-bottom: 4px;
            scrollbar-width: none;
        }

        .thumbnail-strip::-webkit-scrollbar {
            display: none;
        }

        .thumbnail-btn {
            flex: 0 0 80px;
            height: 80px;
            border-radius: 12px;
            overflow: hidden;
            border: 2px solid transparent;
            cursor: pointer;
            transition: all 0.2s ease;
            background: var(--gray-50);
        }

        .thumbnail-btn.active {
            border-color: var(--primary);
        }

        .thumbnail-btn:hover {
            transform: translateY(-2px);
        }

        .thumbnail-btn img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        /* Product Info */
        .product-title {
            font-size: 2rem;
            font-weight: 700;
            line-height: 1.2;
            letter-spacing: -0.02em;
            color: var(--gray-900);
        }

        .price-block {
            display: flex;
            align-items: baseline;
            gap: 12px;
        }

        .current-price {
            font-size: 2rem;
            font-weight: 700;
            color: var(--gray-900);
        }

        .original-price {
            font-size: 1.125rem;
            color: var(--gray-500);
            text-decoration: line-through;
        }

        .discount-tag {
            background-color: #fee2e2;
            color: #ef4444;
            font-weight: 600;
            font-size: 0.875rem;
            padding: 4px 10px;
            border-radius: 20px;
        }

        /* Action Buttons */
        .action-container {
            display: flex;
            gap: 16px;
            align-items: stretch;
        }

        .qty-selector {
            display: flex;
            align-items: center;
            background: var(--gray-50);
            border: 1px solid var(--gray-200);
            border-radius: 12px;
            padding: 4px;
            height: 56px;
        }

        .qty-btn {
            width: 40px;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            border: none;
            background: transparent;
            cursor: pointer;
            font-size: 1.25rem;
            color: var(--gray-700);
            transition: color 0.2s;
        }

        .qty-btn:hover:not(:disabled) {
            color: var(--primary);
            background: #e5e7eb;
            border-radius: 8px;
        }

        .qty-btn:disabled {
            color: var(--gray-300);
            cursor: not-allowed;
        }

        .qty-input {
            width: 40px;
            text-align: center;
            font-weight: 600;
            font-size: 1rem;
            border: none;
            background: transparent;
            color: var(--gray-900);
        }

        .btn-primary {
            background-color: var(--primary);
            color: white;
            border: none;
            border-radius: 12px;
            font-weight: 600;
            padding: 0 32px;
            height: 56px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            font-size: 1rem;
            flex-grow: 1;
        }

        .btn-primary:hover {
            background-color: black;
            /* slightly darker */
            transform: translateY(-2px);
            box-shadow: 0 10px 20px -10px rgba(0, 0, 0, 0.5);
        }

        .btn-wishlist {
            width: 56px;
            height: 56px;
            border-radius: 12px;
            border: 1px solid var(--gray-200);
            background: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            color: var(--gray-700);
            transition: all 0.2s;
            cursor: pointer;
        }

        .btn-wishlist:hover {
            border-color: var(--gray-300);
            background: var(--gray-50);
        }

        .btn-wishlist.active {
            color: var(--danger);
            background: #fee2e2;
            border-color: #fca5a5;
        }

        /* Features/Description */
        .feature-card {
            background: var(--gray-50);
            padding: 24px;
            border-radius: 16px;
            border: 1px solid var(--gray-100);
        }


        /* Related Products */
        .product-card-modern {
            background: white;
            border: 1px solid var(--gray-100);
            border-radius: 12px;
            overflow: hidden;
            transition: all 0.3s ease;
            position: relative;
        }

        .product-card-modern:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 24px -8px rgba(0, 0, 0, 0.1);
        }

        .card-image-container {
            position: relative;
            padding-top: 100%;
            /* 1:1 aspect ratio */
            background: var(--gray-50);
            overflow: hidden;
        }

        .card-image-container img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .product-card-modern:hover .card-image-container img {
            transform: scale(1.05);
        }

        .card-actions {
            position: absolute;
            bottom: 12px;
            left: 50%;
            transform: translateX(-50%) translateY(20px);
            display: flex;
            gap: 8px;
            opacity: 0;
            transition: all 0.3s ease;
        }

        .product-card-modern:hover .card-actions {
            transform: translateX(-50%) translateY(0);
            opacity: 1;
        }

        .action-btn-sm {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: white;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--gray-800);
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            transition: all 0.2s;
        }

        .action-btn-sm:hover {
            background: var(--primary);
            color: white;
        }

        /* Toast Animation override/cleanup */
        .toast-container {
            z-index: 10000;
        }

        @media (max-width: 640px) {
            .product-title {
                font-size: 1.5rem;
            }

            .thumbnail-btn {
                flex: 0 0 60px;
                height: 60px;
            }

            .action-container {
                flex-wrap: wrap;
            }

            .qty-selector {
                width: 100%;
            }
        }
    </style>
</head>

